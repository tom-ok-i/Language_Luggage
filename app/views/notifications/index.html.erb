<% notifications = @notifications.where.not(visitor_id: current_user.id) %>
<div class= "container">
  <div class= "row">
    <div class= "col-12">
      <h2 class= "pt-4 text-secondary text-center font-weight-bold border-bottom">Notifications</h2>
      <div>
        <% if notifications.exists? %>
          <%= render notifications %>
        <% else %>
          <p class= "text-center">通知はありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>