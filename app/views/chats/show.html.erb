<div class= "container">
  <div class= "row">
    <h2 class= "p-4 text-secondary font-weight-bold"><%= @user.name %>さんとのChat Room</h2>
    <div class= "col-lg-8" style= "width: 400px">
      <div class= "message border overflow-auto" id= "chats_area">
        <%= render "chats/chats", chats: @chats, user: @user %>
      </div>
      <div class= "mt-3 mx-auto">
      <%= form_with model: @chat, data: {remote: true} do |f| %>
        <%= f.text_field :message, autofocus: true, placeholder: "メッセージ...", size: "60" %>
        <%= f.hidden_field :room_id %>
        <%= f.submit 'メッセージを送信'%>
      <% end %>
      </div>
    </div>
  </div>
</div>