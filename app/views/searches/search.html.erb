<% if @model == 'user' %>
  <h3 class= "font-weight-bold mt-4 border-bottom text-center pb-2">Users search for "<%= @content %>"</h3>
  <%= render 'users/users', users: @records %>
<% elsif @model == 'post' %>
  <h3 class= "font-weight-bold mt-4 border-bottom text-center pb-2">Posts search for "<%= @content %>"</h3>
  <%= render 'posts/posts', posts: @records %>
<% end %>