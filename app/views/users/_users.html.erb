    <div class= "col-12 d-flex flex-wrap">
      <% users.each do |user| %>
      <div class= "card mx-auto mt-4 mb-4 shadow">
        <%= link_to user_path(user.id) do %>
          <% if user.image.attached? %>
            <%= image_tag user.image, size: "400x400", alt: "Profile Image", class: "card-img-top rounded-circle" %>
          <% else %>
            <img src= "/assets/no_image_profile.jpg" class="mx-auto rounded-circle" width= "400" height= "400" >
          <% end %>
          <h4 class= "font-weight-bold text-center"><%= user.name%></h4>
        <% end %>
        <div class= "d-flex justify-content-around">
          <p class= "mt-2 font-weight-bold">投稿件数 <%= user.posts.count %>件</p>
          <div class= "mt-2">
            Follows： <%= link_to user.following.count, following_user_path(user.id) %>
          </div>
          <div class= "mt-2">
            Followers: <%= link_to user.followers.count, followers_user_path(user.id) %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <%= paginate users %>