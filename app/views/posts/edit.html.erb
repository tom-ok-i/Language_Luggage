<h1>Contents Edit</h1>
<%= form_with model: @post, local:true do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Description</h4>
    <%= f.text_area :description %>
  <h4>Genres</h4>
    <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>
  <h4>Thumbnail</h4>
    <%= f.file_field :image %>
    <%= f.submit 'Save' %>
<% end %>
<button class= "btn btn-danger">
  <%= link_to "Delete Contents", post_path(@post), method: :delete %>
</button>