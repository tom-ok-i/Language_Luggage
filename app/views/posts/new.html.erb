<div class= "container">
 <div class= "row">
  <h2 class ="p-4 text-secondary font-weight-bold">おすすめの作品を投稿しよう！</h2>
 </div>
 <div class= "row">
  <div class= "col-lg-8">
   <%= form_with model: @post, local:true do |f| %>
   <div class= "field">
     <h4>作品名</h4>
     <%= f.text_field :title, autofocus: true %>
   </div>
   <div class= "field pt-4">
     <h4>作品説明</h4>
     <%= f.text_area :description, size: "60x10" , placeholder: "どのような人におすすめできるか教えて下さい。" %>
   </div>
   <div class= "field pt-4">
     <h4>作品ジャンル</h4>
     <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, :prompt => "ジャンルを選択して下さい" %>
   </div>
   <div class= "field pt-4">
     <h4>サムネイル</h4>
     <%= f.file_field :image %>
   </div>
   <div class= "actions pt-4 pb-4">
     <%= f.submit '投稿', class: "btn btn-success" %>
   </div>
  <% end %>
  </div>
 </div>
</div>
