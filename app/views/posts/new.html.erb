<div class= "container">
 <div class= "row">
  <h2 class ="p-4 text-secondary font-weight-bold">おすすめの作品を投稿しよう！</h2>
 </div>
 <div class= "row">
  <div class= "col-lg-8">
    <% if @post.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @post, local:true do |f| %>
      <div class= "field">
        <h4>作品名</h4>
        <%= f.text_field :title, autofocus: true %>
      </div>
      <div class= "field pt-4">
        <h4>作品説明</h4>
        <%= f.text_area :description, size: "60x10" , placeholder: "どのような人におすすめできるか教えて下さい。" %>
      </div>
      <div class= "field pt-4">
        <h4>作品ジャンル</h4>
        <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, :prompt => "ジャンルを選択して下さい" %>
      </div>
      <div class= "field pt-4 mb-2">
        <h4>サムネイル</h4>
        <%= f.file_field :image, class: "push", onchange: "loadImage(this);" %>
      </div>
      <div id="post_images" style="display: none;">
        <p id="preview" style= "height:60px;"></p>
      </div>
      <div class= "actions pt-4 pb-4">
        <%= f.submit '投稿', class: "btn btn-success" %>
      </div>
    <% end %>
    <%= render "loadimage" %>
  </div>
 </div>
</div>